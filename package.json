{
  "name": "karuna-bot",
  "version": "2.0.0",
  "description": "WhatsApp Chatbot with Meta Business API - Python Backend + React Frontend",
  "private": true,
  "scripts": {
    "dev": "cd backend && uvicorn app.main:app --reload --port 3008",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "uvicorn backend.app.main:app --host 0.0.0.0 --port ${PORT:-3008}",
    "install:all": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "docker:build": "docker build -t karuna-bot .",
    "docker:run": "docker run -p 3008:3008 --env-file .env karuna-bot"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "chatbot",
    "grok",
    "ai",
    "meta",
    "whatsapp-business-api",
    "python",
    "fastapi",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC"
}
