# ===========================================
# KARUNA BOT - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# META WHATSAPP BUSINESS API (Required)
# ===========================================
# Get these from: https://developers.facebook.com/apps/

# Access Token from Meta Developer Portal
# Go to: App Dashboard > WhatsApp > API Setup > Generate Access Token
META_JWT_TOKEN=your_permanent_access_token_here

# WhatsApp Business Phone Number ID
# Found in: App Dashboard > WhatsApp > API Setup > Phone Number ID
META_NUMBER_ID=your_phone_number_id_here

# Your custom webhook verification token
# Create any secure random string (e.g., use: openssl rand -hex 32)
META_VERIFY_TOKEN=your_custom_verify_token_here

# Meta Graph API Version (optional, defaults to v21.0)
META_VERSION=v21.0

# ===========================================
# GROK AI (Required for AI responses)
# ===========================================
# Get from: https://x.ai/api

XAI_API_KEY=your_xai_api_key_here

# ===========================================
# GOOGLE SERVICES (Required for scheduling)
# ===========================================

# Google Sheet ID for storing appointments
# Found in the Sheet URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Google Meet link for consultations
MEET_LINK=https://meet.google.com/your-meet-link

# Organizer email for calendar events
KARUNA_EMAIL=your_email@company.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Port for the server (Railway sets this automatically)
PORT=3008

# Node environment
NODE_ENV=production
