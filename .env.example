# ===========================================
# KARUNA BOT - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# MAYTAPI WHATSAPP API (Required)
# ===========================================
# Get these from: https://console.maytapi.com/settings/token

# Your Maytapi Product ID
MAYTAPI_PRODUCT_ID=your_product_id_here

# Your Maytapi Phone ID (found in Phones page or /listPhones endpoint)
MAYTAPI_PHONE_ID=your_phone_id_here

# Your Maytapi API Token (secret key)
MAYTAPI_API_TOKEN=your_api_token_here

# ===========================================
# GROK AI (Required for AI responses)
# ===========================================
# Get from: https://x.ai/api

XAI_API_KEY=your_xai_api_key_here

# ===========================================
# GOOGLE SERVICES (Required for scheduling)
# ===========================================

# Google Sheet ID for storing appointments
# Found in the Sheet URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Path to Google credentials JSON file
GOOGLE_CREDENTIALS_PATH=./google-credentials.json

# Google Meet link for consultations
MEET_LINK=https://meet.google.com/your-meet-link

# Organizer email for calendar events
KARUNA_EMAIL=your_email@company.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Port for the server (Railway sets this automatically)
PORT=3008

# Environment (development or production)
ENVIRONMENT=development

# Frontend URL (for CORS in development)
FRONTEND_URL=http://localhost:5173

# Config file path
CONFIG_FILE_PATH=./config/bot-config.json
